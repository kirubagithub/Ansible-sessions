#!/bin/bash
echo "---------------------"
date
echo "CPU(%)   Memory(%)"
echo "---------------------"
scpu=$(cat /proc/stat | awk '/cpu/{printf("%.2f%\n"), ($2+$4)*100/($2+$4+$5)}' |  awk '{print $0}' | head -1)
smem=$(free | awk '/Mem/{printf("%.2f%"), $3/$2*100}')
echo " $scpu   $smem  "
echo "---------------------"
